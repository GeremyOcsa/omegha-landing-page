---
import Layout from "@layouts/Layout.astro";
import Carousel from "@components/Carousel";
import PreFooter from "@components/PreFooter.astro";
//Idiomas
import type { languageList } from "src/i18n/ui";
import { useTranslations } from "src/i18n/utils";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);
---

<Layout title="Home">
  <section class="pb-5">
    <div class="mx-auto min-h-screen p-4 lg:max-w-5xl">
      <article
        class="prose max-w-none rounded-2xl bg-white-general bg-opacity-60 p-5 text-sm text-black prose-h1:text-2xl/6 lg:text-base"
      >
        <h1
          class="animate-slide-right uppercase text-blue-900 md:pl-5 lg:animate-slide-right-desktop"
        >
          {t("index.title")}
        </h1>
        <div class="">
          <div
            class="flex flex-col-reverse items-center justify-center gap-4 text-black md:flex-row-reverse"
          >
            <div class="w-full">
              <Carousel client:load />
            </div>
            <div class="flex flex-col text-justify">
              <p
                class="animate-slide-right lg:animate-slide-right-desktop"
                set:html={t("index.firstP")}
              />
              <p
                class="mt-0.5 animate-slide-right lg:animate-slide-right-desktop"
              >
                {t("index.secondP")}
              </p>
            </div>
          </div>
          <p class="mt-0.5 text-justify">{t("index.thirdP")}</p>
          <p class="text-justify" set:html={t("index.fourthP")} />
        </div>
      </article>
    </div>
    <PreFooter />
  </section>
</Layout>
