---
import Mapita from "@components/Mapita.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Contáctenos">
  <section class="bg-hero bg-fixed bg-center bg-no-repeat">
    <div class="max-w-5xl mx-auto min-h-screen py-4">
      <div class="rounded-2xl bg-white-general bg-opacity-60 p-5">
        <article class="prose max-w-none">
          <h1 class="pl-5 uppercase">Contactenos</h1>
          <div class="flex flex-row justify-center gap-4">
            <div class="text-black mt-4 text-justify not-prose grid gap-1">
              <p class="">
                Para más información sobre nuestros servicios y/o proyectos,
                póngase en contacto con nosotros y lo atenderemos personalmente.
              </p>
              <div class="py-2">
                <h2 class="pl-5 uppercase font-bold">Escribanos en:</h2>
                <span class="flex flex-row items-center gap-2"
                  ><img src="/footer/Imagen1.png" alt="WhatsApp" /> WhatsApp: (+51)
                  996 723 157</span
                >
                <span class="flex flex-row items-center gap-2"
                  ><img src="/footer/Imagen2.png" alt="Correo" /> Email: contacto@omeghaconstructor.com
                </span>
              </div>
              <div>
                <h2 class="pl-5 uppercase font-bold">Ubiquenos en:</h2>
                <p class="pl-5 font-bold mt-2">Oficina Tarapoto</p>
                <span class="flex flex-row items-center gap-2"
                  ><img src="/footer/Imagen3.png" alt="Ubicacion" /> Jr. Tacna Nº
                  348, Barrio Huayco
                </span>
              </div>
              <div>
                <p class="pl-5 font-bold mt-2">Oficina Lima</p>
                <span class="flex flex-row items-center gap-2"
                  ><img src="/footer/Imagen3.png" alt="Ubicacion" /> Calle José Gonzáles
                  N° 668, Miraflores
                </span>
              </div>
              <div class="mt-2">
                <h2 class="pl-5 uppercase font-bold">Nuestra web:</h2>
                <span class="flex flex-row items-center gap-2"
                  ><img src="/footer/Imagen4.png" alt="Ubicacion" /> www.omeghaconstructor.com
                </span>
              </div>
            </div>
            <Mapita />
          </div>
        </article>
      </div>
    </div>
  </section>
</Layout>
