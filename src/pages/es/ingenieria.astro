---
import Layout from "@layouts/Layout.astro";
import PreFooter from "@components/PreFooter.astro";
//Idioma
import type { languageList } from "src/i18n/ui";
import { useTranslations } from "src/i18n/utils";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);
---

<Layout title="Ingenieria">
  <section class="pb-5">
    <div class="mx-auto min-h-screen max-w-5xl p-4 pb-40">
      <div
        class="flex flex-col gap-6 rounded-2xl bg-white-general bg-opacity-60 p-5"
      >
        <div
          class="prose max-w-none text-justify text-sm text-black prose-h1:text-2xl/6 lg:text-base"
        >
          <h1 class="uppercase text-blue-900 md:pl-5">{t("engi.title")}</h1>
          <p class="animate-slide-top md:animate-slide-top-desktop">
            {t("engi.des")}
          </p>
          <p class="animate-slide-top md:animate-slide-top-desktop">
            {t("engi.span")}
          </p>
        </div>

        <article
          class="animate-slide-top rounded-2xl bg-blue-200 bg-opacity-40 p-5 md:animate-slide-top-desktop"
        >
          <div class="flex flex-col justify-center gap-4 md:flex-row-reverse">
            <div
              class="prose self-center text-justify text-sm text-black lg:text-base"
            >
              <h3 class="text-blue-900">
                {t("firstPro.title")}
              </h3>
              <p>
                {t("firstPro.des")}
              </p>
            </div>
            <img
              class="h-auto rounded-2xl border-2 border-gray-950 object-cover md:w-96 lg:h-72 lg:w-full"
              src="/ingenieria/03.webp"
              alt="Condominio Biosostenible Yori"
            />
          </div>
        </article>

        <article
          class="slide-top rounded-2xl bg-blue-200 bg-opacity-40 p-5 opacity-0"
        >
          <div class="flex flex-col justify-center gap-4 md:flex-row-reverse">
            <div
              class="prose self-center text-justify text-sm text-black md:w-1/2 lg:text-base"
            >
              <h3 class="text-blue-900">{t("secondPro.title")}</h3>
              <p>
                {t("secondPro.des")}
              </p>
            </div>
            <img
              class="h-auto rounded-2xl border-2 border-gray-950 object-cover md:w-96 lg:h-72 lg:w-[510px]"
              src="/ingenieria/02.webp"
              alt="Iglesia de Tarapoto"
            />
          </div>
        </article>

        <article
          class="slide-top rounded-2xl bg-blue-200 bg-opacity-40 p-5 opacity-0"
        >
          <div class="flex flex-col justify-center gap-4 md:flex-row-reverse">
            <div
              class="prose self-center text-justify text-sm text-black md:w-1/2 lg:text-base"
            >
              <h3 class="text-blue-900">
                {t("thirdPro.title")}
              </h3>
              <p>
                {t("thridPro.des")}
              </p>
            </div>
            <img
              class="h-auto flex-1 rounded-2xl border-2 border-gray-950 object-cover md:w-96 lg:h-72 lg:w-[510px]"
              src="/ingenieria/01.webp"
              alt="DiseÃ±o de estructuras"
            />
          </div>
        </article>

        <article
          class="slide-top rounded-2xl bg-blue-200 bg-opacity-40 p-5 opacity-0"
        >
          <div class="flex flex-col justify-center gap-4 md:flex-row-reverse">
            <div
              class="prose self-center text-justify text-sm text-black md:w-1/2 lg:text-base"
            >
              <h3 class="text-blue-900">
                {t("fourthPro.title")}
              </h3>
              <p>
                {t("fourthPro.des")}
              </p>
            </div>
            <img
              class="h-auto rounded-2xl border-2 border-gray-950 object-cover md:w-96 lg:w-[510px]"
              src="/ingenieria/04.webp"
              alt="Primera carretera"
            />
          </div>
        </article>
      </div>
    </div>
    <PreFooter />
  </section>
</Layout>

<script>
  function initAnimations() {
    const observer = new IntersectionObserver(
      (entries, obs) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add(
              "animate-slide-top",
              "md:animate-slide-top-desktop"
            );
            obs.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.2 }
    );
    document
      .querySelectorAll(".slide-top")
      .forEach((el) => observer.observe(el));
  }
  document.addEventListener("astro:after-swap", initAnimations);

  if (document.readyState === "loading") {
    document.addEventListener("astro:page-load", initAnimations);
  } else {
    initAnimations();
  }
</script>
